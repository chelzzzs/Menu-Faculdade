#MICHEL ZULSZESKI CÁCERES - ANÁLISE E DESENVOLVIMENTO DE SISTEMAS
  
lista = [
        {"codigo": 1, "nome": "Lucas", "cpf": "999"},
        {"codigo": 2, "nome": "Pedro", "cpf": "555"},
        {"codigo": 3, "nome": "Helena", "cpf": "123"}
    ]


while True:
    #Menu principal
    print("Seja bem vindo ao menu principal!")
    print("1. Estudantes")
    print("2. Professores")
    print("3. Diciplínas")
    print("4. Matrículas")
    print("5. Turmas")
    print("0. Sair")


    def cadastrar_estudante(lista):
        nome_estudante = input("Digite o nome do aluno:")
        codigo = int(input("Digite o código de matrícula:"))
        cpf = input("Digite o cpf do aluno:")
        lista.append({
            "nome": nome_estudante,
            "codigo": codigo,
            "cpf": cpf,
        })

    #Opção escolhida pelo usuário
    opcao = input("Por gentileza digite uma opção válida.")

    if opcao == "1" or opcao == "2" or opcao == "3" or opcao == "4" or opcao == "5":
       while True:
            print(f"Você selecionou a opção {opcao}".format(opcao))

            # Mostrando o menu secundário
            print(f"Menu de operações - Opção {opcao}".format(opcao))
            print("1. Criar")
            print("2. Listar")
            print("3. Atualizar")
            print("4. Excluir")
            print("5. Voltar ao menu principal")

            # Coletar a opção do menu secundário
            opcao_secundaria = input("Digite uma opção válida")
            print(f"Você selecionou a opção secundária {opcao_secundaria}.")

            if opcao_secundaria == "1":
                cadastrar_estudante(lista)
            elif opcao_secundaria == "2":
                print("LISTA DE ESTUDANTES.")
                for estudante in lista:
                    print(f"Codigo: {estudante['codigo']}, Nome: {estudante['nome']}, CPF: {estudante['cpf']}")
            elif opcao_secundaria == "3":
                print("EM DESENVOLVIMENTO.")
            elif opcao_secundaria == "4":
                print("EM DESENVOLVIMENTO.")
            elif opcao_secundaria == "5":
                break
            else:
                print("Você digitou uma opção INVÁLIDA! Por favor tente novamente.")
    elif opcao == "0":
        print("SAINDO...")
        break
    else:
        print("Você digitou uma opção INVÁLIDA! Por favor tente novamente.")

